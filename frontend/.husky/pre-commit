#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."
echo "ğŸ“ Checking code quality..."

# Run linting
echo "ğŸ§¹ Running ESLint..."
pnpm lint

# Check if linting was successful
if [ $? -eq 0 ]; then
    echo "âœ… Linting passed!"
else
    echo "âŒ Linting failed! Please fix the issues before committing."
    exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type check..."
pnpm type-check

# Check if type checking was successful
if [ $? -eq 0 ]; then
    echo "âœ… Type checking passed!"
else
    echo "âŒ Type checking failed! Please fix the type errors before committing."
    exit 1
fi

